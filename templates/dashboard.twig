{% extends 'base.twig' %}

{% block content %}
<div class="my-4">
    <h2 class="mb-4">Module Dashboard</h2>
    <a href="register.php" class="btn btn-primary mb-3">Register New Module</a>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Status</th>
                <th>Current Value</th>
                <th>Operating Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for module in modules %}
            <tr>
                <td>{{ module.name }}</td>
                <td>{{ module.type }}</td>
                <td>
                    {% if module.status == 'online' %}
                    <span class="badge badge-success">Online</span>
                    {% elseif module.status == 'offline' %}
                    <span class="badge badge-secondary">Offline</span>
                    {% else %}
                    <span class="badge badge-danger">Error</span>
                    {% endif %}
                </td>
                <td>{{ module.value }}</td>
                <td>{{ module.operating_time }}</td>
                <td><a href="module.php?id={{ module.id }}" class="btn btn-info btn-sm">View</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
